<script>
  const cerrarSesion = document.querySelector(".cerrarSesion");
  cerrarSesion.addEventListener("click", () => {
    fetch("/logout", {
      method: "POST",
    }).then((res) => {
      if (res.ok) {
        setTimeout(() => {
          window.location.href = "/login";
        }, 1000);
      }
    });
  });
</script>
